---
import CollectionPage from "./Collection/Collection_Page.astro";
import DiscountProductsPage from "./Discount_Products/Discount_Products_Page.astro";
import Footer from "./Footer.astro";
import IntroPage from "./Intro/Intro_Page.astro";
import NavHome from "./Intro/nav/Nav_Home";
import LifeStylePage from "./Life_Style/Life_Style_Page.astro";
import SummerOfferPage from "./Summer_Offers/Summer_Offer_Page.astro";
import WomenFashionPage from "./Women_Fashion/Women_Fashion_Page.astro";
---

<header class='navegacion_home fixed w-[100%] top-0 left-0 px-0  text-white text-[15px] font-medium z-[999]'>
    <NavHome client:idle />
  </header>
  <main class="relative main">
    <section class="bg-black header_scroll_home cards_scroll_home">
      <IntroPage />
    </section>
    <section class="bg-black cards_scroll_home cards_heigth_home">
      <WomenFashionPage />
    </section>
    <section class="bg-black cards_scroll_home cards_heigth_home">
      <SummerOfferPage />
    </section>
    <section class="bg-black cards_scroll_home cards_heigth_home">
      <DiscountProductsPage />
    </section>
    <section class="bg-black cards_scroll_home cards_heigth_home lifeStyle">
      <LifeStylePage />
    </section>
    <section class="bg-black footer_scroll_home">
      <CollectionPage />
    </section>
    <Footer />
  </main>

  <style>
    .hidden {
      /* hacerlo hidden */
    }
  
    .blur_menu {
      backdrop-filter: blur(2px) saturate(97%);
      -webkit-backdrop-filter: blur(2px) saturate(97%);
      background-color: rgba(1, 1, 1, 0.05);
    }
    .main {
      font-family: 'Poppins', sans-serif;
    }
  
    .cards_heigth_home {
      height: 115vh;
    }
  </style>
  
  <script src="./Hooks/useScrollHome.js"></script>