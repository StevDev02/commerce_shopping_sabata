---
import SpeedInsights from "@vercel/speed-insights/astro";
import SEO from "../components/SEO.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  titulo_pagina: string;
  descripcion_pagina: string;
  fecha_publicacion: string;
  keywords_pagina: string;
}

const {
  titulo_pagina,
  descripcion_pagina,
  fecha_publicacion,
  keywords_pagina,
} = Astro.props;
---

<!doctype html>
<html lang="es-EC" class="h-full antialiased motion-safe:scroll-smooth">
  <head>
    <ViewTransitions />
    <SEO
      titulo_pagina={titulo_pagina}
      descripcion_pagina={descripcion_pagina}
      fecha_publicacion={fecha_publicacion}
      keywords_pagina={keywords_pagina}
    />
  </head>
  <!-- Content -->
  <body class="bg-[--Platinum]">
    <!-- HEADER -->
    <!-- SLOT -->
    <slot />
    <!-- SLOT -->
    <!-- Styles -->
    <style is:global>
      :root {
        /* Palette */
        --Nyanza: #e4fde1;
        --Purpureus: #dda9ff;
        --Russian_Violet: #330036;
        --Light_Coral: #ef7674;
        --Powder_Blue: #aac7e6;
        --Platinum: #e8e8e8;
        /* Other Colors */
        --Timberwolf: #d3cccc;
        --Screaming_Green: #91ff8f;
        --Charcoal: #40424e;
        --Ash_Gray: #c4ccbc;
      }

      @font-face {
        font-family: "Poppins";
        src: url("/fonts/Poppins-Regular.ttf") format("woff");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      html {
        font-family: "Poppins", sans-serif;
        overflow-x: hidden;
        overflow-y: auto;
        color-scheme: light;
      }
    </style>
    <SpeedInsights />
  </body>
</html>
